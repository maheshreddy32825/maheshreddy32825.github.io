---
const { title, description, tags = [], link } = Astro.props;
---
<article class="border rounded-lg p-4 hover:shadow-md transition">
  <h3 class="text-lg font-medium">
    {link ? <a href={link} target="_blank">{title}</a> : title}
  </h3>
  <p class="mt-2 text-sm text-slate-600 dark:text-slate-300">{description}</p>
  <div class="mt-3 flex gap-2 flex-wrap">
    {tags.map(t => <span class="text-xs px-2 py-1 border rounded">{t}</span>)}
  </div>
</article>
